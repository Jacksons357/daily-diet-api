generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String

  meals Meal[] @relation("UserMeals")

  @@map("users")
}

model Meal {
  id          String   @id @unique @default(cuid())
  name        String
  description String
  date        DateTime
  hours       DateTime
  isDiet      Boolean

  userId String
  user   User   @relation("UserMeals", fields: [userId], references: [id])

  @@map("meals")
}
